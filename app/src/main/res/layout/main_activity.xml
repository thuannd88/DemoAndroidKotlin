<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginStart="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHeader"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="Your Name"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"/>
    <TextView
        android:id="@+id/txtBoD"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="Your Birth Day"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/txtName"/>
    <TextView
        android:id="@+id/txtSummary"
        android:layout_width="392dp"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:text="Summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <Button
        android:id="@+id/btnGetInfor"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="Get Infor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSummary" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="txtName,txtBoD"/>


</androidx.constraintlayout.widget.ConstraintLayout>